upstream api_backend {
    server backend:8000;
}

server {

    listen 80;
    server_name _;
    charset utf-8;

    location /static {
        alias /static;
    }

    location /api {
        proxy_pass http://api_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

}