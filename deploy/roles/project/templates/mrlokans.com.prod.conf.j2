upstream mrlokans {  
    server {{ project_gunicorn_socket }} fail_timeout=0;
    keepalive 60;
}

server {
    listen 80;
    server_name {{ project_domain_name }} www.{{ project_domain_name }};
    return 301 https://$host$request_uri;
    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-XSS-Protection "1; mode=block";
    add_header Content-Security-Policy "default-src 'self'";

}

server {
    listen 443 ssl;
    server_name {{ project_domain_name }} www.{{ project_domain_name }};

    access_log /var/log/nginx/{{ project_domain_name }}.access.log;
    error_log /var/log/nginx/{{ project_domain_name }}.error.log;

    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-XSS-Protection "1; mode=block";
    add_header Content-Security-Policy "default-src 'self' 'unsafe-inline' https://mc.yandex.ru;
                    style-src 'self' https://fonts.googleapis.com;
                    font-src 'self' https://fonts.gstatic.com;";

    ssl on;
    ssl_certificate        /etc/letsencrypt/live/{{ project_domain_name }}/fullchain.pem;
    ssl_certificate_key    /etc/letsencrypt/live/{{ project_domain_name }}/privkey.pem;
    ssl_protocols          TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_ciphers 'EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH';
    ssl_session_tickets off;
    ssl_stapling on;
    ssl_stapling_verify on;

    gzip        on;
    gzip_types      text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript application/javascript;

    location /static/ {
        alias {{ project_static_dir }}/;
        expires max;
        access_log off;
    }

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $http_host;

        proxy_cache STATIC;
        proxy_cache_valid 200 10m;
        proxy_cache_valid 404 1m;

        proxy_ignore_headers X-Accel-Expires Expires Cache-Control;
        proxy_ignore_headers Set-Cookie;
        proxy_hide_header Set-Cookie;

        proxy_pass http://mrlokans;
    }
}